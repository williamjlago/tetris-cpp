{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Tetris",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o", "main",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-g"   // Include debug symbols
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
